@page "/"

<PageTitle>Index</PageTitle>

<div class="container">
  <div class="row py-3">
    <div class="col-md-5">
        <h2>TASKS</h2>
        <Tasks 
            @ref="Tasks"
            TaskItems=@TaskItems
            OnTaskSelected=@TaskSelected
            OnTaskRemoved=@TaskRemoved />
    </div>
    <div class="col-md-2 text-center align-self-center">
        <div class="row">
            <div class="py-3">
                <button type="button" class="btn btn-primary" @onclick="@CompleteTask"><i class="bi bi-arrow-right-square"></i> Complete </button>
            </div>
        </div>
    </div>
    <div class="col-md-5">
        <h2>DONE</h2>
        <Tasks
            TaskItems=@CompletedItems
            OnTaskRemoved=@TaskRemoved
            AllowSelect=false />
    </div>
  </div>

  <div class="row">
      <div>
        <input type="text" @bind=NewTask />
        <button type="button" class="btn btn-primary" @onclick="@AddTask"><i class="bi bi-file-plus"></i> Add New </button>
      </div>
  </div>

@if (SelectedTask != null)
{
  <div class="row py-3">
      <div>
        <input type="text" @bind=UpdatedTask />
        <button type="button" class="btn btn-primary" @onclick="@UpdateTask"><i class="bi bi-file-arrow-up"></i> Update </button>
      </div>
  </div>
}
</div>
